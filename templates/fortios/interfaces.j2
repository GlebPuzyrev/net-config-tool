! --- FortiGate Config ---
config system global
    set hostname "{{ hostname | default('FW-01') }}"
    set timezone 26
end

config system ntp
    set ntpsync enable
    set type custom
    config ntpservers
        edit 1
            set server "{{ ntp_server | default('pool.ntp.org') }}"
        next
    end
end

config system interface
    edit "port1"
        set description "{{ descr | default('Mgmt Interface') }}"
        set allowaccess ping ssh http https
    next
end

